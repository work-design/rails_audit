<td>
  <p><%= model.operator&.name %></p>
  <p><time data-controller="time" data-format="human"><%= model.created_at.to_formatted_s(:iso8601) %></time></p>
  <p><%= model.action %></p>
  <p><%= model.controller_path %>/<%= model.action_name %></p>
  <p><%= model.remote_ip %></p>
  <p><%= model.note %></p>
</td>
<td class="has-background-light">
<% max_width = model.audited_changes_i18n.keys.map(&:length).max %>
<% model.audited_changes_i18n.each do |key, value| %>
  <div>
    <span class="has-text-mono has-text-right color-grey" style="display: inline-block;width: <%= max_width + 1 %>ch"><%= key %>:</span>
    <% if value.is_a?(Array) %>
      <span><%= value[0] %></span>
      <i class="fa-solid fa-arrow-right"></i>
      <span><%= value[1] %></span>
    <% else %>
      <span><%= value %></span>
    <% end %>
  </div>
<% end %>
</td>
<td>
  <% model.related_changes.each do |key, records| %>
    <span class="tag"><%= key %></span>
    <% records.each do |record| %>
      <% record.each do |k, v| %>
      <div>
        <span><%= k %></span>
        <span><%= v[0] %></span>
        <i class="fa-solid fa-arrow-right"></i>
        <span><%= v[1] %></span>
      </div>
      <% end %>
    <% end %>
  <% end %>
</td>
