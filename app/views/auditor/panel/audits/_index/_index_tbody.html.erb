<td>
  <p><%= model.operator&.name %></p>
  <p><time data-controller="time" data-format="human"><%= model.created_at.to_formatted_s(:iso8601) %></time></p>
  <p><%= model.action %></p>
  <p><%= model.controller_path %>/<%= model.action_name %></p>
  <p><%= model.remote_ip %></p>
  <p><%= model.note %></p>
</td>
<td>
<% max_width = model.audited_changes_i18n.keys.map(&:length).max %>
<% model.audited_changes_i18n.each do |key, value| %>
  <div>
    <span class="has-text-mono has-text-right has-text-grey" style="display: inline-block;width: <%= max_width + 1 %>ch"><%= key %>:</span>
    <% if value.is_a?(Array) %>
      <span><%= value[0] %></span>
      <i class="fa-solid fa-arrow-right"></i>
      <span><%= value[1] %></span>
    <% else %>
      <span><%= value %></span>
    <% end %>
  </div>
<% end %>
</td>
<td>
  <% model.related_changes.each do |key, value| %>
    <% value.each do |relate| %>
      <div class="ui segment">
        <span class="ui blue label"><%= key %>: <%= relate[:id] %></span>
        <div class="ui divider"></div>
        <% relate[:changes].each do |k, v| %>
          <div class="ui label"><%= k %>: </div>
          <%= v[0] %>
          <i class="arrow circle right icon grey"></i>
          <%= v[1] %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</td>
