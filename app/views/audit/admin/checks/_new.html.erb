<div class="ui modal" id="modal">
  <i class="fas fa-times close"></i>
  <div class="ui header">
    <%= t('.check') %>
  </div>
  
  <div class="content">
    <%= form_with model: @check, url: checks_path do |f| %>
      <%= render 'shared/error_messages', target: @check %>
      <%= f.hidden_field :state %>
      <%= f.text_area :comment %>
      <%= f.check_box :confirmed %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
