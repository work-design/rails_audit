<div class="ui modal" id="modal">
  <i class="fas fa-times close"></i>
  <div class="ui header">
    <%= t('.check') %>
  </div>

  <div class="content">
    <%= form_with model: @check do |f| %>
      <%= render 'shared/error_messages', target: @check %>
      <%= f.number_field :member_id %>
      <%= f.text_field :comment %>
      <%= f.check_box :confirmed %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
